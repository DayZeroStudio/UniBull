{
  "name": "UniBull",
  "version": "0.0.1",
  "description": "foobar",
  "dependencies": {
    "async": "^0.9.0",
    "bcrypt": "^0.8.2",
    "body-parser": "^1.12.2",
    "browserify": "^9.0.8",
    "bunyan": "^1.3.4",
    "cookie-parser": "^1.3.4",
    "ejs": "^2.3.1",
    "express": "^4.12.3",
    "express-jwt": "^3.0.0",
    "jsonwebtoken": "^5.0.0",
    "lodash": "^3.6.0",
    "pg": "^4.3.0",
    "pg-hstore": "^2.3.2",
    "sendevent": "^1.0.4",
    "sequelize": "^2.0.5",
    "uglify-js": "^2.4.19",
    "watch": "^0.16.0"
  },
  "devDependencies": {
    "chai": "^2.2.0",
    "mocha": "^2.2.4",
    "pre-commit": "^1.0.6",
    "sinon": "^1.14.1",
    "supertest": "^0.15.0"
  },
  "scripts": {
    "test": "NODE_ENV=test mocha --check-leaks --reporter spec test/ | bunyan",
    "autotest": "NODE_ENV=test mocha --watch --check-leaks --reporter spec test/ | bunyan",
    "start": "nodemon --ignore public/ --delay 2.5 | bunyan",
    "lint": "eslint ./index.js ./test/* ./views/*.js ./models/* ./rest/*"
  },
  "pre-commit": [
    "test",
    "lint"
  ],
  "eslintConfig": {
    "env": {
      "node": true,
      "mocha": true
    },
    "rules": {
      "camelcase": 0,
      "no-shadow": 0,
      "new-cap": 0,
      "space-infix-ops": 0,
      "eol-last": 2,
      "no-multiple-empty-lines": [
        2,
        {
          "max": 1
        }
      ],
      "no-wrap-func": 0,
      "space-after-keywords": [
        2,
        "always"
      ],
      "space-before-function-paren": [
        2,
        "never"
      ],
      "space-before-blocks": [
        2,
        "always"
      ],
      "brace-style": [
        2,
        "1tbs",
        {
          "allowSingleLine": true
        }
      ],
      "consistent-this": [
        2,
        "self"
      ],
      "space-return-throw-case": 2,
      "wrap-regex": 2
    }
  }
}
